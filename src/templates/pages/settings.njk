{% extends "layouts/default.njk" %}
{% set DOC_TITLE = "Settings" %}
{% set BASE_HREF = "./" %}
{% set BODY_CLASS = "fixed-navbar" %}

{% block additional_vendor_scripts %}
   <script src="{{BASE_HREF}}assets/scripts/summernote/summernote.js"></script>
{% endblock %}

{% block additional_custom_scripts %}
   <script src="{{BASE_HREF}}assets/scripts/components/sample-form.js"></script>
{% endblock %}

{% block main %}
<div class="main-content">
   <div class="row">
      <div class="col mb-3">
         <div class="d-flex">
            <h2 class="main-content__title">Settings</h2>
         </div>
      </div>
   </div>
   <div class="row">
      <div class="col">
         <div class="box">
            <div class="box__wrapper">
               <div class="box__header">
                  <h3 class="box__title">General Settings</h3>
                  <div class="box__action">
                     <button class="button button--link js-button-reload">
                        <i data-feather="rotate-cw"></i>
                     </button>
                     <button class="button button--link js-button-expand js-jamil">
                        <i data-feather="maximize"></i>
                     </button>
                  </div>
               </div><!-- /.box__header -->
               <form class="form" novalidate>
                  <div class="box__body box__body--more-space">
                     <div class="row">
                        <div class="col-12 col-xl-3">
                           <div class="form__column">
                              <div class="form__image">
                                 <div class="image-wrapper">
                                    <!-- Image Default -->
                                    <img src="{{BASE_HREF}}assets/images/default/img-placeholder-add-logo.jpg" alt="image-placeholder-add-logo">
                                 </div>
                              </div>
                              <div class="button-upload mb-3">
                                 <button type="button" class="button button--primary button--alt button--outline button--block mb-2 js-upload-button">Upload Logo</button>
                                 <input type="file" accept="image/*" class="file-upload hide-default">
                              </div>
                           </div>
                           <div class="button-upload mb-3">
                              <button type="button" class="button button--primary button--alt button--outline button--block mb-2 js-upload-button">Upload Logo</button>
                              <input type="file" accept="image/*" class="file-upload hide-default">
                           </div>
                           <p class="small"><strong>Take note:</strong><br/>Maximum File image dimension: 300x300 px</p>
                        </div>
                        <div class="col-12 col-xl-9">
                           <div class="row more-space-left">
                              <div class="col col-xl-6">
                                 <div class="form__column">
                                    <h4 class="form__title">Basic Information</h4>
                                    <div class="form-group">
                                       <label for="fname">Company Name</label>
                                       <input id="fname" name="fname" class="form-control" placeholder="Your Company Name" value="Cyberindo Primatama" required>
                                       <div class="invalid-feedback">You forgot filled your Company Name</div>
                                       <div class="valid-feedback">Looks Great</div>
                                    </div>
                                    <div class="form-group">
                                       <label for="fname">Representative Email</label>
                                       <input id="fname" name="fname" class="form-control" value="brian.pranata@cyberprimatama.co.id" required>
                                       <div class="invalid-feedback">You forgot filled your Company Name</div>
                                       <div class="valid-feedback">Looks Great</div>
                                    </div>
                                    <div class="form-group">
                                       <label for="space">Hosting Space *</label>
                                       <div class="d-flex">
                                          <input id="space" name="space" type="number" class="form-control" value="500" required>
                                          <select class="form-control ml-3" id="unit">
                                             <option value="">Select Unit</option>
                                             <option value="MB" selected>MB</option>
                                             <option value="GB">GB</option>
                                             <option value="TB">TB</option>
                                          </select>
                                       </div>
                                       <div class="invalid-feedback">Please Select your Role</div>
                                    </div>
                                 </div>
                              </div><!-- /.inner-col -->
                              <div class="col col-xl-6">
                                 <div class="form__column">
                                    <h4 class="form__title">Contact Information</h4>
                                    <div class="form-group">
                                       <label for="phone">Phone *</label>
                                       <input id="phone" name="phone" placeholder="Start with +62-" class="form-control" value="+62-21-2996-4900" required>
                                       <div class="invalid-feedback">Input your correct phone number, start with +62-</div>
                                    </div>
                                    <div class="form-group">
                                       <label for="fax">Fax *</label>
                                       <input id="fax" name="fax" placeholder="Start with +62-" class="form-control" value="+62-21-2996-4920" required>
                                       <div class="invalid-feedback">Input your correct fax number, start with +62-</div>
                                    </div>
                                    <div class="form-group">
                                       <label for="c_email">Corporate Email *</label>
                                       <input id="c_email" name="c_email" type="email" class="form-control" placeholder="Your valid E-mail address" value="webdev@cyberprimatama.co.id" required>
                                       <div class="invalid-feedback">Invalid Email Address, you Dipshit</div>
                                    </div>
                                 </div>
                              </div><!-- /.inner-col -->
                              <div class="col col-xl-12">
                                 <div class="form__column">
                                    <h4 class="form__title">Additional Information</h4>
                                    <div class="form-group">
                                       <label for="content_id">Company Address</label>
                                       <textarea id="content_id" name="content_id" class="form-control summernote" required></textarea>
                                       <div class="invalid-feedback">Your Company address must not empty</div>
                                    </div>
                                    <div class="form-group d-flex align-items-center py-2">
                                       <div class="form__desc">
                                          <p class="form__desc-title">Set Browse Cache Limit</p>
                                          <p class="form__desc-subtitle">Sample information about browser cache, default was null</p>
                                       </div>
                                       <div class="form__actions">
                                          <div class="toggle-switch">
                                             <label>
                                                <input type="checkbox" name="isHomepage" value="true" class="form-check-input"/>
                                                <span class="toggle-switch__box">
                                                   <span class="toggle-switch__switcher"></span>
                                                </span>
                                             </label>
                                          </div>
                                       </div>
                                    </div>
                                    <div class="form-group d-flex align-items-center py-2">
                                       <div class="form__desc">
                                          <p class="form__desc-title">Set as Default</p>
                                          <p class="form__desc-subtitle">Primary information about your company</p>
                                       </div>
                                       <div class="form__actions">
                                          <div class="toggle-switch">
                                             <label>
                                                <input type="checkbox" name="isDefaultInfo" value="true" class="form-check-input" checked/>
                                                <span class="toggle-switch__box">
                                                   <span class="toggle-switch__switcher"></span>
                                                </span>
                                             </label>
                                          </div>
                                       </div>
                                    </div>
                                 </div>
                              </div><!-- /.inner-col -->
                              <div class="col col-xl-12">
                                 <div class="form__column">
                                    <h4 class="form__title">Google Maps</h4>
                                    <div class="row">
                                       <div class="form-group col">
                                          <label for="lat">Latitude</label>
                                          <input type="text" class="form-control" placeholder="Latitude Coordinate" required>
                                          <div class="invalid-feedback">Please fill-in latitude coordinate</div>
                                       </div>
                                       <div class="form-group col">
                                          <label for="lat">Longitude</label>
                                          <input type="text" class="form-control" placeholder="Longitude Coordinate" required>
                                          <div class="invalid-feedback">Please fill-in longitude coordinate</div>
                                       </div>
                                    </div>
                                 </div>
                              </div><!-- /.inner-col -->
                           </div><!-- /.inner-row -->
                        </div><!-- /.col -->
                     </div><!-- /.row -->
                  </div><!-- /.box__body -->
                  <div class="box__footer box__footer--with-space box__footer--border-top justify-content-end">
                     <div class="box__footer-actions">
                        <a href="{{BASE_HREF}}dashboard.html" class="button button--alt button--hollow mr-2">Cancel</a>
                        <button type="submit" class="button button--alt button--primary js-button-submit">Save Settings</button>
                     </div>
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
   {% include "components/_footer.njk" %}
</div>
{% endblock %}