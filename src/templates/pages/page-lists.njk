{% extends "layouts/default.njk" %}
{% set DOC_TITLE = "Page Lists" %}
{% set BASE_HREF = "./" %}
{% set BODY_CLASS = "fixed-navbar" %}

{% block additional_vendor_scripts %}
   <script src="{{BASE_HREF}}assets/scripts/datatables.net/js/jquery.dataTables.js"></script>
{% endblock %}

{% block additional_custom_scripts %}
   <script src="{{BASE_HREF}}assets/scripts/components/sample-table.js"></script>
{% endblock %}

{% block main %}
<div class="main-content">
   <div class="row">
      <div class="col mb-3">
         <div class="d-flex">
            <h2 class="main-content__title">{{DOC_TITLE}}</h2>
            <a class="button button--secondary button--small-icon" href="./page-create.html"><i class="icon-feather" data-feather="plus"></i>Add New Page</a>
         </div>
      </div>
   </div>
   <div class="row">
      <div class="col">
         <div class="box">
            <div class="box__wrapper">
               <div class="box__header">
                  <h3 class="box__title">{{DOC_TITLE}}</h3>
                  <div class="box__action">
                     <button class="button button--link js-button-reload">
                        <i data-feather="rotate-cw"></i>
                     </button>
                     <button class="button button--link js-button-expand">
                        <i data-feather="maximize"></i>
                     </button>
                  </div>
               </div>
               <div class="box__body">
                  
                  <table class="table table--striped table--post" id="tablePageLists">
                     <thead>
                        <tr>
                           <th><div class="checkbox"><label><input type="checkbox"><span class="checkbox__span"><i data-feather="check" class="icon-feather icon-feather--black"></i></span></label></div></th>
                           <th>Page</th>
                           <th>Author</th>
                           <th>Date</th>
                        </tr>
                     </thead>
                     <tbody>
                        {% include "components/_components-page-lists.njk" %}
                     </tbody>
                  </table>
                  
                  <form class="form-inline form-bulk">
                     <select name="" class="custom-select mr-1" id="formBulkAction">
                        <option selected>Bulk Action</option>
                        <option value="1">Edit</option>
                        <option value="2">Move to Trash</option>
                        <option value="3">Twerk it!</option>
                     </select>
                     <button type="submit" class="button button--small">Apply</button>
                  </form>
               </div>
            </div>
         </div>
      </div>
   </div>
   {% include "components/_footer.njk" %}
</div>
{% endblock %}