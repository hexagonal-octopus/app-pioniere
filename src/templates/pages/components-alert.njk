                        <button class="button button--alt button--primary mr-3 mb-3 js-button-custom-toast" data-view="top" data-type="info" data-title="Toast Notification" data-message="Show Notification on Top-Right Corner">Toast Single Top Right</button>
                        <button class="button button--alt button--primary mr-3 mb-3 js-button-custom-toast" data-view="bottom" data-type="valid" data-title="Toast Notification" data-message="Show Notification on Bottom-Right Corner.">Toast Single Bottom Right</button>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div> <!-- /.col -->
   </div><!-- /.row -->
   
   {% include "components/_footer.njk" %}
</div>
