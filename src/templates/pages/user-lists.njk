{% extends "layouts/default.njk" %}
{% set DOC_TITLE = "User Lists" %}
{% set BASE_HREF = "./" %}
{% set BODY_CLASS = "fixed-navbar" %}

{% block additional_vendor_scripts %}
   <script src="{{BASE_HREF}}assets/scripts/datatables.net/js/jquery.dataTables.js"></script>
{% endblock %}

{% block additional_custom_scripts %}
   {{ super() }}
   <script src="{{BASE_HREF}}assets/scripts/components/sample-table.js"></script>
{% endblock %}

{% block main %}
<div class="main-content">
   <div class="row">
      <div class="col mb-3">
         <div class="d-flex">
            <h2 class="main-content__title">User Lists</h2>
            <a class="button button--secondary button--small-icon" href="./user-add.html"><i class="icon-feather" data-feather="plus"></i>Add New User</a>
         </div>
      </div>
   </div>
   <div class="row">
      <div class="col">
         <div class="box">
            <div class="box__wrapper">
               <div class="box__header">
                  <h3 class="box__title">All User List</h3>
                  <div class="box__action">
                     <button class="button button--link js-button-reload">
                        <i data-feather="rotate-cw"></i>
                     </button>
                     <button class="button button--link js-button-expand">
                        <i data-feather="maximize"></i>
                     </button>
                  </div>
               </div>
               <div class="box__body">
                  
                  <table class="table table--striped table--user" id="tableUserLists">
                     <thead>
                        <tr>
                           <th>User Name</th>
                           <th>Email</th>
                           <th>Role</th>
                           <th>Actions</th>
                        </tr>
                     </thead>
                     <tbody>
                        {% include "components/_components-user-lists.njk" %}
                     </tbody>
                  </table>
               </div>
            </div>
         </div>
      </div>
   </div>
   {% include "components/_footer.njk" %}
</div>
{% endblock %}