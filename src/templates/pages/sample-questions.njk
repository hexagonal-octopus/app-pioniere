{% extends "layouts/default.njk" %}
{% set DOC_TITLE = "Sample Form Add Questions" %}
{% set BASE_HREF = "./" %}
{% set BODY_CLASS = "fixed-navbar" %}

{% block additional_custom_scripts %}
   <script src="{{BASE_HREF}}assets/scripts/components/sample-form.js"></script>
   <script src="{{BASE_HREF}}assets/scripts/components/init-summernote.js"></script>
{% endblock %}

{% block additional_vendor_scripts %}
   <script src="{{BASE_HREF}}assets/scripts/select2/js/select2.min.js"></script>
   <script src="{{BASE_HREF}}assets/scripts/summernote/summernote.js"></script>

{% endblock %}

{% block main %}
   <div class="main-content">
      <div class="row">
         <div class="col">
            <div class="d-flex align-items-center mb-3">
               <h2 class="main-content__title">Add New Question</h2>
            </div>
         </div>
      </div>
      <div class="box">
         <div class="box__wrapper">
            <div class="box__header">
               <h3 class="box__title">Form Question</h3>
            </div>
            <form class="form" novalidate method="POST">
               <div class="box__body box__body--spacy">
                  <div class="form-group is-invalid">
                     <label for="subject">Subject <span class="required">*</span></label>
                     <input type="text" class="form-control" id="subject" name="subhect" placeholder="Enter Subject">
                     <div class="invalid-feedback">Please filled this field</div>
                  </div>
                  <div class="form-group is-invalid">
                     <label for="pageDesc">Question <span class="required">*</span></label>
                     <textarea id="pageDesc" name="page_desc" class="form-control summernote"></textarea>
                     <div class="invalid-feedback">Please filled this field</div>
                  </div>
                  <div class="form-group is-invalid">
                     <label for="answer_type">Type <span class="required">*</span></label>
                     <select class="form-control select2 select2--default" name="answer_type" id="answer_type" >
                        <option value="Short Answer">Short Answer</option>
                        <option value="Long Answer">Long Answer</option>
                        <option value="Dropdown">Dropdown</option>
                        <option value="Multiple Choice">Multiple Choice</option>
                        <option value="Checkbox">Checkbox</option>
                     </select>
                     <div class="invalid-feedback">Must filled this select field</div>
                     <div id="answerOptions" class="answer-options"></div>
                  </div>
                  <div class="form-group is-invalid">
                     <label for="">This Question must be Answered ?</label>
                     <div class="form__row">
                        <div class="form__action-flex">
                           <input type="radio" name="must_answer" value="true" class="form__input-radio" id="must_answer_yes" checked/>
                           <label for="must_answer_yes" class="form__label-radio">Yes</label>
                        </div>
                        <div class="form__action-flex">
                           <input type="radio" name="must_answer" value="false" class="form__input-radio" id="must_answer_no"/>
                           <label for="must_answer_no" class="form__label-radio">No</label>
                        </div>
                     </div>
                     <div class="invalid-feedback">You're wrong.</div>
                     <!-- /.form__row -->
                  </div>
                  <div class="form-group is-invalid">
                     <label for="order">Order <span class="required">*</span></label>
                     <select class="form-control select2 select2--default" name="order" id="order" >
                        <option value="At the beginning">At the beginning</option>
                        <optgroup label="After">
                           <option value="1">Option One</option>
                           <option value="2">Option Two</option>
                           <option value="3">Option Three</option>
                        </optgroup>
                     </select>
                     <div class="invalid-feedback">Must filled this select field.</div>
                  </div>
                  <div class="form-group">
                     <label for="status">Status <span class="required">*</span></label>
                     <select class="form-control select2 select2--default" name="status" id="status" >
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                     </select>
                  </div>
               </div>
               <!-- /.box__body -->
               <div class="box__footer box__footer--with-space box__footer--border-top justify-content-end">
                  <div class="box__footer-actions">
                     <a href="{{BASE_HREF}}dashboard.html" class="button button--alt button--hollow mr-2">Cancel</a>
                     <button type="submit" class="button button--alt button--primary js-button-submit">Submit Form</button>
                  </div>
               </div>
            </form>
         </div>
      </div>
      {% include "components/_footer.njk" %}
      <div class="spinner">
         <div class="lds-ring">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
         </div>
      </div>
   </div>
{% endblock %}