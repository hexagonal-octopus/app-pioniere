{% extends "layouts/default.njk" %}
{% set DOC_TITLE = "Add News" %}
{% set BASE_HREF = "./" %}
{% set BODY_CLASS = "fixed-navbar" %}

{% block additional_vendor_scripts %}
   <script src="{{BASE_HREF}}assets/scripts/datatables.net/js/jquery.dataTables.js"></script>
{% endblock %}

{% block additional_custom_scripts %}
   {{super()}}
   <script src="{{BASE_HREF}}assets/scripts/components/sample-table.js"></script>
{% endblock %}

{% block main %}
<div class="main-content">
   <div class="row">
      <div class="col mb-3">
         <div class="d-flex">
            <h2 class="main-content__title">Categories</h2>
         </div>
      </div>
   </div>
   <form class="form" name="form_new_page">
      <div class="row align-items-start">
         <div class="col-xs-12 col-xl-4">
            <div class="box">
               <div class="box__wrapper">
                  <div class="box__header">
                     <h3 class="box__title"><i data-feather="edit"></i> Add New Category</h3>
                     <div class="box__action">
                        <button class="button button--link js-button-expand">
                           <i data-feather="maximize"></i>
                        </button>
                        <button class="button button--link js-button-minimize">
                           <i data-feather="minus"></i>
                        </button>
                     </div>
                  </div>
                  <div class="box__body box__body--spacy">
                     <form>
                        <div class="form-group">
                           <label for="cat_name">Name</label>
                           <input id="cat_name" name="cat-name" placeholder="Create New Category" class="form-control" required>
                           <div class="invalid-feedback">Input can't be empty</div>
                        </div>
                        <div class="form-group">
                           <label for="cat_slug">Slug</label>
                           <input id="cat_slug" name="cat-slug" placeholder="URL-friendly version of the name." class="form-control" required>
                           <div class="invalid-feedback">Input can't be empty</div>
                        </div>
                        <div class="form-group">
                           <label for="parent_category">Parent Category</label>
                           <select id="parent_category" class="form-control">
                              <option selected>Select Parent Category</option>
                           </select>
                           <p class="small">
                              Categories, unlike tags, can have a hierarchy. You might have a Jazz category, and under that have children categories for Bebop and Big Band. Totally optional.
                           </p>
                        </div>
                        <div class="form-group">
                           <label for="select_cat">Description</label>
                           <textarea id="select_cat" name="select_cat" rows="5" class="form-control" required></textarea>
                           <div class="invalid-feedback">Your Company address must not empty</div>
                        </div>
                        <input type="submit" class="button button--alt button--secondary button--block mb-3" value="Add New Category">
                     </form>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-xs-12 col-xl-8">
            <div class="box">
               <div class="box__wrapper">
                  <div class="box__header">
                     <h3 class="box__title"><i data-feather="list"></i> Lists of Category</h3>
                     <div class="box__action">
                        <button class="button button--link js-button-expand">
                           <i data-feather="maximize"></i>
                        </button>
                        <button class="button button--link js-button-minimize">
                           <i data-feather="minus"></i>
                        </button>
                     </div>
                  </div>
                  <div class="box__body">
                     <div class="table-responsive">
                        <table class="table table--striped table--post" id="tableNewsLists">
                           <thead>
                              <tr>
                                 <th><div class="checkbox"><label><input type="checkbox"><span class="checkbox__span"><i data-feather="check" class="icon-feather icon-feather--black"></i></span></label></div></th>
                                 <th>Name</th>
                                 <th>Description</th>
                                 <th>Slug</th>
                              </tr>
                           </thead>
                           <tbody>
                              {% include "components/_components-cat-lists.njk" %}
                           </tbody>
                        </table>
                     </div>

                     <form class="form-inline form-bulk">
                        <select name="" class="custom-select mr-1" id="formBulkAction">
                           <option selected>Bulk Action</option>
                           <option value="1">Edit</option>
                           <option value="2">Move to Trash</option>
                           <option value="3">Twerk it!</option>
                        </select>
                        <button type="submit" class="button button--small">Apply</button>
                     </form>
                     <div class="small pxb-20px">
                        <strong>Note:</strong><br>
                        Deleting a category does not delete the news in that category. <br>Instead, news that were only assigned to the deleted category are set to the category Uncategorised.
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </form>
   {% include "components/_footer.njk" %}
</div>
{% endblock %}