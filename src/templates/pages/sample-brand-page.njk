{% extends "layouts/default.njk" %}
{% set DOC_TITLE = "Add New Brand" %}
{% set BASE_HREF = "./" %}
{% set BODY_CLASS = "fixed-navbar" %}

{% block additional_vendor_scripts %}
   <script src="{{BASE_HREF}}assets/scripts/flatpickr/flatpickr.min.js"></script>
   <script src="{{BASE_HREF}}assets/scripts/summernote/summernote.js"></script>
{% endblock %}

{% block additional_custom_scripts %}
   <script src="{{BASE_HREF}}assets/scripts/components/init-summernote.js"></script>
   <script src="{{BASE_HREF}}assets/scripts/components/sample-toast.js"></script>
   <script src="{{BASE_HREF}}assets/scripts/components/sample-date-picker.js"></script>
   <script src="{{BASE_HREF}}assets/scripts/components/sample-form.js"></script>
{% endblock %}

{% block main %}
<div class="main-content">
   <div class="row">
      <div class="col mb-3">
         <div class="d-flex">
            <h2 class="main-content__title">{{ DOC_TITLE }}</h2>
         </div>
      </div>
   </div>
   <form class="form" name="">
      <div class="row align-items-start">
         <div class="col-xs-12 col-md-12 col-xl-9">
            <div class="box">
               <div class="box__wrapper">
                  <div class="box__header">
                     <h3 class="box__title"><i data-feather="edit"></i> General Information</h3>
                  </div>
                  <div class="box__body box__body--spacy">
                     <div class="form-group">
                        <label for="">Brand Name</label>
                        <input type="text" class="form-control" id="" name="" placeholder="Enter New Brand">
                     </div>
                     <div class="form-group">
                        <label for="">Slug Name</label>
                        <input type="text" class="form-control" id="" name="" placeholder="Enter slugname">
                        <div class="form__permalink">Permalink: <a href="#" target="_blank">http://test.com/</a></div>
                     </div>
                     <div class="form-group">
                        <label for="pageDesc">Description</label>
                        <textarea id="pageDesc" name="page_desc" class="form-control summernote"></textarea>
                     </div>
                  </div>
               </div>
            </div>
            <div class="box">
               <div class="box__wrapper">
                  <div class="box__header">
                     <h3 class="box__title"><i data-feather="compass"></i> Additional Information</h3>
                     <div class="box__action">
                        <button class="button button--link js-button-reload">
                           <i data-feather="rotate-cw"></i>
                        </button>
                        <button class="button button--link js-button-expand">
                           <i data-feather="maximize"></i>
                        </button>
                        <button class="button button--link js-button-minimize">
                           <i data-feather="minus"></i>
                        </button>
                     </div>
                  </div>
                  <div class="box__body">
                     <div class="pxb-20px">
                        <div class="form-group">
                           <label for="">Cover Image</label>
                           <div class="image-outline">
                              <div class="image-preview-wrapper image-wide"></div>
                           </div>
                           <button type="button" class="button button--small button--alt mx-1 mb-4 js-button-upload" data-label="Cover Image">Set Cover Image</button>
                           <input type="file" accept="image/*" id="uploadCoverInput" class="hide-default">
                           <p class="small"><strong>Note:</strong> Best Image File Dimension 1140 x 350 px</p>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-xs-12 col-md-12 col-xl-3">
            <div class="box">
               <div class="box__wrapper">
                  <div class="box__header">
                     <h3 class="box__title"><i data-feather="image"></i> Brand Image</h3>
                     <div class="box__action">
                        <button class="button button--link js-button-minimize">
                           <i data-feather="minus"></i>
                        </button>
                     </div>
                  </div>
                  <div class="box__body">
                     <div class="pxb-20px">
                        <div class="form-group text-center">
                           <div class="image-outline image-200w">
                              <div class="image-preview-wrapper image-rect"></div>
                           </div>
                           <button type="button" class="button button--alt button--secondary button--outline button--small mx-2 mb-4 js-button-upload" data-label="Brand Image">Set Brand Image</button>
                           <input type="file" accept="image/*" class="hide-default">
                           <p class="small">Best Image File Dimension 200x200 px</p>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <div class="box">
               <div class="box__wrapper">
                  <div class="box__header">
                     <h3 class="box__title"><i data-feather="send"></i> Publish</h3>
                     <div class="box__action">
                        <button class="button button--link js-button-minimize">
                           <i data-feather="minus"></i>
                        </button>
                     </div>
                  </div>
                  <div class="box__body">
                     <div class="pxb-20px">
                        <div class="form-group">
                           <label for="status">Status</label>
                           <select id="status" class="form-control">
                              <option selected>Status Page</option>
                              <option>Draft</option>
                              <option>Pending Review</option>
                              <option>Published</option>
                           </select>
                        </div>
                        <div class="form-group">
                           <label for="pub_date">Publish Date</label>
                           <select id="pub_date" class="form-control">
                              <option selected>Scheduled for</option>
                              <option>Option A</option>
                              <option>Option B</option>
                              <option>Option C</option>
                           </select>
                        </div>
                        <div class="form-group form-group--icon-right mb-5">
                           <input type="text" class="form-control form--datepicker" data-position="left top" data-language="en" name="published_date"/>
                           <span class="form-group__icon"><i data-feather="calendar"></i></span>
                        </div>
                        <div class="form-group">
                           <button type="submit" class="button button--alt button--secondary button--block mb-3 js-button-alert"  data-view="is-valid" data-icon="check" data-target="feedback--alt" data-message="Yeay!! Page has been Created.">Publish</button>
                           <button type="button" class="button button--alt button--block js-button-alert" data-view="is-info" data-icon="info" data-target="feedback--no-pointer" data-message="Page has been saved as a Draft." >Save as a Draft</button>
                        </div>
                        
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </form>
   {% include "components/_footer.njk" %}
   <div class="spinner">
      <div class="lds-ring"><div></div><div></div><div></div><div></div></div>
   </div>
</div>
{% endblock %}