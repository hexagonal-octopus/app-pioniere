{% extends "layouts/default.njk" %}
{% set DOC_TITLE = "Sample Report HRD" %}
{% set BASE_HREF = "./" %}
{% set BODY_CLASS = "fixed-navbar" %}

{% block additional_custom_scripts %}
   <script src="{{BASE_HREF}}assets/scripts/components/sample-form.js"></script>
{% endblock %}

{% block additional_vendor_scripts %}
<script src="{{BASE_HREF}}assets/scripts/select2/js/select2.min.js"></script>
{% endblock %}

{% block main %}
<div class="main-content">
   <div class="row">
      <div class="col mb-3">
         <div class="d-flex">
            <h2 class="main-content__title">Recruitment Dashboard</h2>
         </div>
      </div>
   </div>
   <div class="row row-align-start">
      <div class="col-xs-12 col-sm-12 col-xl-3">
         <div class="box">
            <div class="box__wrapper">
               <div class="box__header">
                  <h3 class="box__title"><i data-feather="settings"></i> Sorting Filter</h3>
               </div><!-- /.box__header -->
               <div class="box__body box__body--spacy">
                  <form class="form" novalidate>
                     <div class="form-group mb-4">
                        <p class="form__group-text">Kewarganegaraan</p>
                        <div class="checkbox checkbox--green">
                           <label>
                              <input type="checkbox">
                              <span class="checkbox__span">
                                 <i data-feather="check" class="icon-feather icon-feather--black"></i>
                              </span>
                              <span class="checkbox__text">Indonesia - <strong>25</strong></span>
                           </label>
                        </div>
                        <div class="checkbox checkbox--green">
                           <label>
                              <input type="checkbox">
                              <span class="checkbox__span">
                                 <i data-feather="check" class="icon-feather icon-feather--black"></i>
                              </span>
                              <span class="checkbox__text">Asing - <strong>12</strong></span>
                           </label>
                        </div>
                     </div><!-- /.form-group -->
                     <div class="form-group mb-4">
                        <p class="form__group-text">Gender</p>
                        <div class="checkbox checkbox--green">
                           <label>
                              <input type="checkbox" name="male">
                              <span class="checkbox__span">
                                 <i data-feather="check" class="icon-feather icon-feather--black"></i>
                              </span>
                              <span class="checkbox__text">Male - <strong>25</strong></span>
                           </label>
                        </div>
                        <div class="checkbox checkbox--green">
                           <label>
                              <input type="checkbox">
                              <span class="checkbox__span" name="female">
                                 <i data-feather="check" class="icon-feather icon-feather--black"></i>
                              </span>
                              <span class="checkbox__text">Female - <strong>12</strong></span>
                           </label>
                        </div>
                        <div class="checkbox checkbox--green">
                           <label>
                              <input type="checkbox">
                              <span class="checkbox__span" name="unspecified_gender">
                                 <i data-feather="check" class="icon-feather icon-feather--black"></i>
                              </span>
                              <span class="checkbox__text">Unspecified - <strong>2</strong></span>
                           </label>
                        </div>
                     </div><!-- /.form-group -->
                     <div class="form-group mb-4">
                        <p class="form__group-text">Age Range</p>
                        <div class="form__display-flex">
                           <label for="min_age">Min.</label>
                           <input type="number" id="min_age" name="min_age" class="form-control" min="20" max="30" />
                        </div>
                        <div class="form__display-flex">
                           <label for="max_age">Max.</label>
                           <input type="number" id="max_age" name="max_age" class="form-control" min="30" max="45" />
                        </div>
                     </div><!-- /.form-group -->
                     <div class="form-group mb-4">
                        <p class="form__group-text">Years Experience</p>
                        <input type="number" id="experience_years" name="experience_years" class="form-control" min="20" max="30"  placeholder="Minimum 1 years"/>
                     </div><!-- /.form-group -->
                     <div class="form-group mb-4">
                        <p class="form__group-text">Education Degree</p>
                        <select class="form-control select2 select2--default" name="edu_degree" id="edu_degree" multiple="multiple">
                           <option value="High School">High School or Equivalent (SMU, SMK, etc)</option>
                           <option value="Diploma Degree">Diploma Degree - D4</option>
                           <option value="Associate degree">Associate degree / Diploma Degree (D1 - D3)</option>
                           <option value="Bachelor Degree">Bachelor Degree</option>
                           <option value="Master Degree">Master Degree / Post Graduate Degree</option>
                           <option value="Doctorate">Doctorate</option>
                        </select>
                     </div><!-- /.form-group -->
                     <div class="form-group mb-4">
                        <p class="form__group-text">Job Level</p>
                        <select class="form-control select2 select2--default" name="job_level" id="job_level" multiple="multiple">
                           <option value="fresh_graduate">Fresh Graduates / Less Than 1 Year Experience</option>
                           <option value="junior_staff">Staff / Junior Staff</option>
                           <option value="senior_staff">Senior Staff / Supervisor / Coordinator / Team Leader</option>
                           <option value="manager">Manager / Senior Manager / Department Head</option>
                           <option value="director">Associate Director / Director / GM</option>
                           <option value="c_level">C - Level (CEO, COO, CMO, CFO)</option>
                        </select>
                     </div><!-- /.form-group -->
                     <div class="form-group">
                        <p class="form__group-text">Province</p>
                        <select class="form-control select2 select2--default" name="province" id="province">
                           <option value="sumatera_utara">Sumatera Utara</option>
                           <option value="sumatera_barat">Sumatera Barat</option>
                           <option value="riau">Riau</option>
                           <option value="jambi">Jambi</option>
                           <option value="sumater_selatan">Sumatera Selatan</option>
                           <option value="bengkulu">Bengkulu</option>
                           <option value="others">Isi sendiri, Capek Ngetik</option>
                        </select>
                     </div><!-- /.form-group -->
                  </form>
               </div>
            </div>
         </div>
      </div>
      <div class="col-xs-12 col-sm-12 col-xl-9">
         <div class="box">
            <div class="box__wrapper">
               <div class="box__header box__header--no-padding-y">
                  <div class="box__column box__column--display-flex">
                     <div class="checkbox checkbox--green">
                        <label>
                           <input type="checkbox">
                           <span class="checkbox__span" name="unspecified_gender">
                              <i data-feather="check" class="icon-feather icon-feather--black"></i>
                           </span>
                           <span class="checkbox__text">Select All</span>
                        </label>
                     </div>
                     <div class="dropdown dropdown--bulk ml-4">
                        <button class="button button--outline button--small dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                           Bulk Operation
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                           <a class="dropdown-item" href="#">Terpilih</a>
                           <a class="dropdown-item" href="#">Wawancara</a>
                           <a class="dropdown-item" href="#">Tidak Sesuai</a>
                        </div>
                     </div>
                  </div>
                  <div class="box__action">
                     <div class="nav nav-tabs nav-tabs--tertiary" id="navTab">
                        <a href="#unprocessed" role="tab" data-toggle="tab" class="nav-item nav-link d-flex align-items-center active">
                           <span>Belum Diproses - <strong>25</strong></span>
                        </a>
                        <a href="#chosen" role="tab" data-toggle="tab" class="nav-item nav-link d-flex align-items-center ">
                           <span>Terpilih - <strong>25</strong></span>
                        </a>
                        <a href="#interview" role="tab" data-toggle="tab" class="nav-item nav-link d-flex align-items-center ">
                           <span>Wawancara - <strong>25</strong></span>
                        </a>
                        <a href="#dumped" role="tab" data-toggle="tab" class="nav-item nav-link d-flex align-items-center ">
                           <span>Tidak Sesuai - <strong>25</strong></span>
                        </a>
                     </div>
                  </div>
               </div><!-- /.box__header -->
            </div>
         </div>
         <!-- /.box -->
         <div class="box">
            <div class="box__wrapper">
               <div class="box__header">
                  <h3 class="box__title">General</h3>
                  <div class="box__action">
                     <button class="button button--link js-button-reload">
                        <i data-feather="rotate-cw"></i>
                     </button>
                     <button class="button button--link js-button-expand js-jamil">
                        <i data-feather="maximize"></i>
                     </button>
                  </div>
               </div><!-- /.box__header -->
               <form class="form" novalidate>
                  <div class="box__body box__body--more-space">
                     <div class="row">
                        <div class="col col-xl-3">
                           <div class="profile__img">
                              <div class="image-wrapper">
                                 <!-- Image Default -->
                                 <img src="{{BASE_HREF}}assets/images/default/img-profile-big-default.jpg" alt="Image profile default">
                              </div>
                           </div>
                           <div class="button-upload mb-3">
                              <button type="button" class="button button--primary button--alt button--outline button--block mb-2 js-upload-button">Upload Photo</button>
                              <input type="file" accept="image/*" class="file-upload hide-default">
                           </div>
                           <p class="small"><strong>Take note:</strong><br/>Maximum File image dimension: 300x300 px</p>
                        </div>
                        <div class="col col-xl-8 offset-xl-1">
                           <div class="row">
                              <div class="col col-xl-6">
                                 <h4 class="profile__title">Basic Information</h4>
                                 <div class="form-group">
                                    <label for="fname">Fullname</label>
                                    <input id="fname" name="fname" class="form-control" placeholder="ex. Brian Basreng" required>
                                    <div class="invalid-feedback">Please edit your name</div>
                                 </div>
                                 <div class="form-group">
                                    <label for="position">Position *</label>
                                    <select class="form-control" id="position" required>
                                       <option value="">Select your Role</option>
                                       <option value="1">Administrator</option>
                                       <option value="2">Editor</option>
                                       <option value="3">Moderator</option>
                                    </select>
                                    <div class="invalid-feedback">Please Select your Role</div>
                                 </div>
                                 <div class="form-group">
                                    <label for="idnum">ID Number</label>
                                    <input id="idnum" name="idnum" class="form-control" placeholder="Create New ID Number">
                                 </div>
                                 <div class="form-group">
                                    <label for="gender">Gender *</label>
                                    <select class="form-control" id="gender" required>
                                       <option value="" default>Select Gender</option>
                                       <option value="m">Male</option>
                                       <option value="f">Female</option>
                                       <option value="x">Undefined</option>
                                    </select>
                                    <div class="invalid-feedback">Please Select your Gender, if not choosen You're Homo</div>
                                 </div>
                                 <div class="form-group">
                                    <label for="bio">Description about Me</label>
                                    <textarea id="bio" name="bio" class="form-control" rows="5" placeholder="Create short description about you"></textarea>
                                 </div>
                              </div>
                              <div class="col col-xl-6">
                                 <h4 class="profile__title">Contact Information</h4>
                                 <div class="form-group">
                                    <label for="phone">Emergency Phone *</label>
                                    <input id="phone" name="phone" placeholder="Start with +62-" class="form-control" required>
                                    <div class="invalid-feedback">Input your correct phone number, start with +62-</div>
                                 </div>
                                 <div class="form-group">
                                    <label for="addr">Address *</label>
                                    <input id="addr" name="addr" type="text" class="form-control" required>
                                    <div class="invalid-feedback">Chooses your address Cabron!</div>
                                 </div>
                                 <div class="form-group">
                                    <label for="email">Email *</label>
                                    <input id="email" name="email" type="email" class="form-control" placeholder="Your valid E-mail address" required>
                                    <div class="invalid-feedback">Invalid Email Address, you Dipshit</div>
                                 </div>
                                 <div class="form-group">
                                    <label for="site-url">Site</label>
                                    <input id="site-url" name="site-url" type="text" class="form-control" placeholder="start with http://">
                                 </div>
                                 <div class="form-group">
                                    <label for="ext">Extension</label>
                                    <input id="ext" name="ext" type="number" class="form-control" placeholder="Extension Phone Registry">
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div><!-- /.box__body -->
                  <div class="box__footer box__footer--with-space box__footer--border-top justify-content-end">
                     <div class="box__footer-actions">
                        <a href="{{BASE_HREF}}user-lists.html" class="button button--alt button--hollow mr-2">Cancel</a>
                        <button type="submit" class="button button--alt button--primary js-button-submit">Create User</button>
                     </div>
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
   {% include "components/_footer.njk" %}
</div>
{% endblock %}