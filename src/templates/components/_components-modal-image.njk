<div class="modal fade modal--fullsize" id="exampleModalImage" aria-labelledby="exampleModalImage" tabindex="-1" role="dialog" aria-hidden="true">
   <div class="modal-dialog" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <h2 class="modal-title">Asset Detail</h2>
            <button type="button" data-dismiss="modal" aria-label="Close" class="button button--link close">
               <i data-feather="x" class="icon-feather icon-feather--bigger icon-feather--dark"></i>
            </button>
         </div>
         <div class="modal-body">
            <div class="row">
               <div class="col-12 col-md-8">
                  <div class="preview-image">
                     <div class="preview-image__wrapper">
                        <div class="preview-image__centered">
                           <img src="{{BASE_HREF}}assets/images/default/img-sample-1.jpg" alt="" class="preview-image__image">
                        </div>
                     </div>
                  </div>
               </div>
               <div class="col-12 col-md-4">
                  <div class="modal-meta">
                     <p><strong>File name:</strong> image-sample-1.jpg</p>
                     <p><strong>File type:</strong> image/jpeg</p>
                     <p><strong>Uploaded on:</strong> 7th August 2018</p>
                     <p><strong>Filesize:</strong> 55KB</p>
                     <p><strong>Dimension:</strong> 600 x 348</p>
                     <p class="separator"></p>
                     <div class="form-group">
                        <label for="url">URL</label>
                        <input class="form-control" id="url" type="text" value="./assets/images/image-sample-1.jpg" readonly/>
                     </div>
                     <div class="form-group">
                        <label for="title">Title</label>
                        <input class="form-control" id="title" type="text" placeholder="Best Title for your image"/>
                     </div>
                     <div class="form-group">
                        <label for="caption">Caption</label>
                        <textarea class="form-control" id="caption" type="text" placeholder="Drop your caption text here ,used for alt text and meta-description" rows="5"></textarea>
                     </div>
                  </div>
               </div>
            </div>
         </div>
         <div class="modal-footer">
            <div class="modal__actions-right">
               <button type="button" class="button button--alt button--hollow mr-2" data-dismiss="modal">Cancel</button>
               <button type="button" class="button button--alt button--danger mr-2">Delete</button>
               <button type="button" class="button button--alt button--primary">Update</button>
            </div>
         </div>
      </div>
   </div>
</div>