<form class="form" name="form_new_page">
      <div class="row align-items-start">
         <div class="col-xs-12 col-md-12 col-xl-9">
            <div class="box">
               <div class="box__wrapper">
                  <div class="box__header">
                     <h3 class="box__title"><i data-feather="edit"></i> General</h3>
                     <div class="box__action">
                        <button class="button button--link js-button-reload">
                           <i data-feather="rotate-cw"></i>
                        </button>
                        <button class="button button--link js-button-expand">
                           <i data-feather="maximize"></i>
                        </button>
                        <button class="button button--link js-button-minimize">
                           <i data-feather="minus"></i>
                        </button>
                     </div>
                  </div>
                  <div class="box__body">
                     <div class="pxb-20px">
                        <div class="form-group">
                           <label for="title_id">Product Name</label>
                           <input type="text" id="title_id" name="title_id" class="form-control">
                           <div class="form__permalink">Permalink: <a href="#" target="_blank">http://test.com/</a></div>
                        </div>
                        <div class="form-group">
                           <label for="pageDesc">Description</label>
                           <textarea id="pageDesc" name="page_desc" class="form-control summernote"></textarea>
                        </div>
                        <div class="form-group">
                           <label for="metaTitle">Meta Tag Title (SEO)</label>
                           <input type="text" id="metaTitle" name="meta_title" class="form-control">
                        </div>
                        <div class="form-group">
                           <label for="metaDesc">Meta Tag Description (SEO)</label>
                           <textarea id="metaDesc" name="meta_desc" class="form-control"></textarea>
                        </div>
                     </div>
                  </div>
               </div>
            </div><!-- /.box -->
            <div class="box">
               <div class="box__wrapper">
                  <div class="box__header">
                     <h3 class="box__title"><i data-feather="file"></i> Data</h3>
                     <div class="box__action">
                        <button class="button button--link js-button-reload">
                           <i data-feather="rotate-cw"></i>
                        </button>
                        <button class="button button--link js-button-expand">
                           <i data-feather="maximize"></i>
                        </button>
                        <button class="button button--link js-button-minimize">
                           <i data-feather="minus"></i>
                        </button>
                     </div>
                  </div>
                  <div class="box__body">
                     <div class="pxb-20px">
                        <div class="form-group">
                           <label for="">Brand</label>
                           <select class="form-control" id="unit">
                              <option value="" selected>Select Brand</option>
                              <option value="" >A</option>
                              <option value="">B</option>
                              <option value="">C</option>
                           </select>
                        </div>
                        <div class="form-group">
                           <label for="">Categories</label>
                           <select class="form-control" id="unit">
                              <option value="" selected>Select Category</option>
                              <option value="" >A</option>
                              <option value="">B</option>
                              <option value="">C</option>
                           </select>
                        </div>
                        <div class="form-group">
                           <label for="">Price</label>
                           <input type="number" id="" name="" class="form-control">
                        </div>
                        <div class="form-group d-flex align-items-center mt-5">
                           <div class="form__desc">
                              <h3 class="form__desc-title">Set as Featured</h3>
                              <p class="form__desc-subtitle">Product will be registered as Featured on Homepage if enabled</p>
                           </div>
                           <div class="form__actions">
                              <div class="toggle-switch">
                                 <label>
                                    <input type="checkbox" name="isFeatured" value="true" class="form-check-input" checked/>
                                    <span class="toggle-switch__box">
                                       <span class="toggle-switch__switcher"></span>
                                    </span>
                                 </label>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div><!-- /.box -->
            <div class="box">
               <div class="box__wrapper">
                  <div class="box__header">
                     <h3 class="box__title"><i data-feather="camera"></i> Image</h3>
                     <div class="box__action">
                        <button class="button button--link js-button-reload">
                           <i data-feather="rotate-cw"></i>
                        </button>
                        <button class="button button--link js-button-expand">
                           <i data-feather="maximize"></i>
                        </button>
                        <button class="button button--link js-button-minimize">
                           <i data-feather="minus"></i>
                        </button>
                     </div>
                  </div>
                  <div class="box__body">
                     <div class="pxb-20px">
                        <div class="form-group">
                           <label for="">Product Image</label>
                           <select class="form-control" id="unit">
                              <option value="" selected>Select Brand</option>
                              <option value="" >A</option>
                              <option value="">B</option>
                              <option value="">C</option>
                           </select>
                        </div>
                     </div>
                  </div>
               </div>
            </div><!-- /.box -->
         </div>
         <div class="col-xs-12 col-md-12 col-xl-3">
            <div class="box">
               <div class="box__wrapper">
                  <div class="box__header">
                     <h3 class="box__title"><i data-feather="send"></i> Publish</h3>
                     <div class="box__action">
                        <button class="button button--link js-button-minimize">
                           <i data-feather="minus"></i>
                        </button>
                     </div>
                  </div>
                  <div class="box__body">
                     <div class="pxb-20px">
                        <div class="form-group">
                           <label for="status">Status</label>
                           <select id="status" class="form-control">
                              <option selected>Status Page</option>
                              <option>Draft</option>
                              <option>Pending Review</option>
                              <option>Published</option>
                           </select>
                        </div>
                        <div class="form-group mb-5">
                           <label for="pub_date">Publish Date</label>
                           <div class="form-group form-group--icon-right">
                              <input type="text" class="form-control form--datepicker" data-position="left top" data-language="en" name="published_date"/>
                              <span class="form-icon"><i data-feather="calendar"></i></span>
                           </div>
                        </div>
                        <div class="form-group">
                           <input type="submit" class="button button--alt button--secondary button--block mb-3" value="Update">
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </form>